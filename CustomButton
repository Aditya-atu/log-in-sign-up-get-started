// Example usage in another component
import React from 'react';
import { View, StyleSheet } from 'react-native';
import CustomButton from './CustomButton'; // Adjust path as per your file structure

const App = () => {
  const handlePress = () => {
    console.log('Button pressed');
    // Handle button press logic here
  };

  return (
    <View style={styles.container}>
      <CustomButton title="Primary Button" onPress={handlePress} kind="primary" size="large" />
      <CustomButton title="Secondary Button" onPress={handlePress} kind="secondary" size="small" />
      <CustomButton title="Outlined Button" onPress={handlePress} variant="outlined" />
      <CustomButton title="Contained Button" onPress={handlePress} variant="contained" />
      <CustomButton iconName="ios-star" onPress={handlePress} iconOnly />
    </View>
  );
};

const styles = StyleSheet.create({
